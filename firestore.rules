rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read and write to the camps collection
    match /camps/{campId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read and write to the zones collection
    match /zones/{zoneId} {
      allow read, write: if request.auth != null;
    }
  }
}
